public class ContaEspecial extends ContaBancaria{
	
	//atributo
	private double limite;
	
	//construtor
	public ContaEspecial(String cliente, String NumConta, double saldo, double limite) {
		super(cliente, NumConta, saldo);
		this.limite = limite;
	}
	//metodo
	public void Sacarlimite(double valor) {
		 if (valor <= saldo + limite) {
	            saldo = saldo - valor;
	            System.out.println("\nSaque de R$" + valor + " realizado com sucesso.");
	        } else {
	            System.out.println("\nSaldo insuficiente e limite excedido. Saque nÃ£o realizado.");
	        }
	}
	@Override
    public String toString() {
        return super.toString() + "\nLimite: R$ " + limite;
    }
}
